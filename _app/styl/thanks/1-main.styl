#thanks
	padding 120px 0 50px
	height: 100vh
	@media screen and (max-width 560px)
		padding 150px 0 30px
.thanks
	&-title
		font-size: 32px
		font-weight: bold
		text-transform uppercase
		color #113080
		margin-bottom: 30px
		@media screen and (max-width 560px)
			font-size: 24px
			margin-bottom: 20px
	&-subtitle
		width 50%
		font-size: 24px
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 560px)
			width 100%
			font-size: 18px
	&-img
		position absolute
		width auto
		top -120px
		// right -575px
		left 320px
		@media screen and (max-width 991px)
			top -200px
			left 150px
		@media screen and (max-width 560px)
			width 743px
			left -120px
			right 0
			margin 0 auto
			top -220px